                  //  stos();
                    console.log('teraz tez dziala', e);
                });

                // onblur="wywolanie();" onmouseover="console.log('cokolwiek 2');"


                $("#id_tresc").on('change', function (e) { console.log('change in effect', e); });
                $("#id_tresc").on('blur', function (e) { wywolanie(); });
                $("#id_tresc").on('mouseover', function (e) { console.log('cokolwiek mouseover 2'); });
            }

            //setTimeout(TakToSieRobi, 1000);

            $(document).ready(function () {
                console.log('1 ready');
                TakToSieRobi();
            });

            $(document).ready(function () {
                console.log('2 ready');
            });



@using TrainingFive.Areas.Mg.Models
@model MgFindOfferModel

@{
    Layout = null;
}

<img src="http://p2.galapp.net/OP/0006/Web/aebf8e2b/Grafika/znajdz-oferte_1045.png" id="find-offer-img" class="img-responsive" />
@Html.DropDownListFor(x => x.OfferType, new[]
{
    new SelectListItem() {Text="Wszystkie", Value= MgOfferTypeEnum.OfferType.All.ToString()},
    new SelectListItem() {Text="Sprzedaż", Value= MgOfferTypeEnum.OfferType.Sale.ToString()},
    new SelectListItem() {Text="Wynajem", Value= MgOfferTypeEnum.OfferType.Rent.ToString()},
},new {id="offer-type-dd-list"})

@Html.DropDownListFor(x => x.PropertyType, new[]
{
    new SelectListItem() {Text="Wszystkie", Value= MgOfferTypeEnum.PropertyType.All.ToString()},
    new SelectListItem() {Text="Mieszkania", Value= MgOfferTypeEnum.PropertyType.Flat.ToString()},
    new SelectListItem() {Text="Domy", Value= MgOfferTypeEnum.PropertyType.House.ToString()},
    new SelectListItem() {Text="Działki", Value= MgOfferTypeEnum.PropertyType.Ground.ToString()},
    new SelectListItem() {Text="Lokale", Value= MgOfferTypeEnum.PropertyType.Premis.ToString()},
    new SelectListItem() {Text="Hale", Value= MgOfferTypeEnum.PropertyType.Hall.ToString()},
    new SelectListItem() {Text="Obiekty", Value= MgOfferTypeEnum.PropertyType.Object.ToString()},
}, new { id = "property-type-dd-list" })

@Html.DropDownListFor(x => x.City, new[]
{
    new SelectListItem() {Text="Opole", Value= MgOfferTypeEnum.City.Opole.ToString()},
    new SelectListItem() {Text="Wrocław", Value= MgOfferTypeEnum.City.Wroclaw.ToString()},
    new SelectListItem() {Text="Warszawa", Value= MgOfferTypeEnum.City.Warszawa.ToString()},

}, new { id = "city-dd-list" })

@Html.DropDownListFor(x => x.NumberOfRooms, new[]
{
    new SelectListItem() {Text="Wszystkie", Value= MgOfferTypeEnum.NumberOfRooms.All.ToString()},
    new SelectListItem() {Text="1 pokojowe", Value= MgOfferTypeEnum.NumberOfRooms.One.ToString()},
    new SelectListItem() {Text="2 pokojowe", Value= MgOfferTypeEnum.NumberOfRooms.Two.ToString()},
    new SelectListItem() {Text="3 pokojweo", Value= MgOfferTypeEnum.NumberOfRooms.Three.ToString()},
    new SelectListItem() {Text="4 pokojweo", Value= MgOfferTypeEnum.NumberOfRooms.Four.ToString()},
    new SelectListItem() {Text="5 pokojowe i więcej", Value= MgOfferTypeEnum.NumberOfRooms.FiveOrMore.ToString()},

}, new { id = "number-of-rooms-dd-list" })

